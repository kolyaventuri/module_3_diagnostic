<h1>Stations near <%= @zip_code %></h1>

<table class="table stations">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Fuel Type(s)</th>
            <th>Distance</th>
            <th>Access Time(s)</th>
        </tr>
    </thead>
    <tbody>
        <% @stations.each do |station| %>
            <tr>
                <td data-attribute="name"><%= station.name %></td>
                <td data-attribute="address"><%= station.address %></td>
                <td data-attribute="fuel-type"><%= station.fuel_types %></td>
                <td data-attribute="distance"><%= station.distance %> mi</td>
                <td data-attribute="access-times"><%= station.access_times %></td>
            </tr>
        <% end %>
    </tbody>
</table>
